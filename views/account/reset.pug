extends ../layout

block content
  .page-header
    h3 Redefinir Senha
  .col-sm-8.col-sm-offset-2
    form(method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(for='password') Nova Senha
        input.form-control(type='password', name='password', id='password', placeholder='Nova senha', autofocus, required)
      .form-group
        label(for='confirm') Confirmar Senha
        input.form-control(type='password', name='confirm', id='confirm', placeholder='Confirmar senha', required)
      .form-group
        button.btn.btn-primary.btn-reset(type='submit')
          i.fa.fa-lock
          | Alterar Senha
