.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Alternar navegação
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-cube
        | Supermercado HAPPE
    .collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Entrar') ? 'active' : undefined)
            a(href='/entrar') Entrar
          li(class=(title == 'Registrar') ? 'active' : undefined)
            a(href='/registrar') Registrar
        else
          li.dropdown(class=(title == 'Gerenciar Conta') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src=user.profile.picture)
              else
                img(src=user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/conta') Minha conta
              li.divider
              li
                a(href='/sair') Sair
